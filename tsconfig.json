{
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "CommonJS",
        "baseUrl": "src",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "sourceMap": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}